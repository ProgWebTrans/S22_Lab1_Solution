@model PresseMots_DataModels.Entities.StoryTag

@{
    ViewData["Title"] = @Locals["Delete"];
}

<h1>@Locals["Delete"]</h1>

<h3>@Locals["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Locals["Tag Link"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tag.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Story)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Story.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Locals["Delete"]" class="btn btn-danger" /> |
          <a asp-action="Index" asp-controller="Stories" asp-route-Id="@Model.StoryId">@Locals["&laquo; Back"]</a>
    </form>
</div>
