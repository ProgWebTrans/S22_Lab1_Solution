@model PresseMots_DataModels.Entities.StoryTag

@{
    ViewData["Title"] = @Locals["Create"];
}

<h1>@Locals["Create"]</h1>

<h4>@Locals["Associate tag for"] @ViewBag.StoryTitle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoryId" ></input>
            <div class="form-group">
                <label asp-for="TagId" class="control-label"></label> <a asp-action="Create" asp-controller="Tags" class="badge badge-secondary">@Locals["Add tag"]</a>
                <select asp-for="TagId" class ="form-control" asp-items="ViewBag.TagId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@Locals["Add"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Locals["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
